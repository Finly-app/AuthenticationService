{
  "Jwt": {
    "Key": "{JWT_SECRET}",
    "Issuer": "Finly",
    "Audience": "Finly_personal"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SslMode=${DB_SSLMODE};Trust Server Certificate=${DB_TRUST_CERT}"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "HmacSecret": "{HMAC_SECRET}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
